<h2 class="auth-h2">Sign Up</h2>

<form class="auth-form" action="<%= users_url %>" method="POST">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="row">

        <div class="small-5">
            <label for="email">Email
                <input type="text" name="user[email]" id="email" value="">
            </label>
        </div>

        <div class="small-5">
            <label for="first_name">First Name
                <input type="text" name="user[first_name]" id="first_name" value="">
            </label>
        </div>

        <div class="small-5">
            <label for="last_name">Last Name
                <input type="text" name="user[last_name]" id="last_name" value="">
            </label>
        </div>

        <div class="small-5">
            <label for="password">Password
                <input type="password" name="user[password]" id="password" value="">
            </label>
        </div>

    </div>

    <input class="auth-submit button" type="submit" value="Sign In">

</form>

<div class="auth-switch">Already have an account? <a href="<%= new_session_url %>">Log In!</a></div>
